@model pet_store_noamcelermajer.Models.Animal
@{
    ViewData["Title"] = "Animal Details";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Name</h2>
            </div>
            <div class="card-body">
                <img class="card-img-top" src="~/images/animals/@Model.PictureName" alt="@Model.Name" style="max-height: 300px; object-fit: cover;">
                <p class="card-text mt-3">Age: @Model.Age</p>
                <p class="card-text">Category: @Model.Category.Name</p>
                <p class="card-text">Description: @Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Comments</h2>
        <ul>
            @foreach(var comment in ViewData["Comments"] as List<pet_store_noamcelermajer.Models.Comment>)
            {
                <li>@comment.CommentText</li>
            }
        </ul>
        <form asp-action="AddComment" method="post">
            <input type="hidden" name="AnimalId" value="@Model.AnimalId" />
            <div class="form-group">
                <label for="CommentText">Add a Comment:</label>
                <input type="text" id="CommentText" name="CommentText" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </form>
    </div>
</div>
